# Environment
NODE_ENV=development

# Server
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/legal-crm

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=Δικηγορικό Γραφείο <noreply@lawoffice.gr>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Viva Wallet
VIVA_MERCHANT_ID=your-viva-merchant-id
VIVA_API_KEY=your-viva-api-key
VIVA_CLIENT_ID=your-viva-client-id
VIVA_CLIENT_SECRET=your-viva-client-secret
VIVA_WEBHOOK_KEY=your-viva-webhook-key

# File Upload
MAX_FILE_UPLOAD=10485760
FILE_UPLOAD_PATH=./uploads

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Backup
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Google OAuth (for Google Meet integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Two Factor Authentication
TWO_FACTOR_APP_NAME=Legal CRM

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Greek Holidays API (optional)
GREEK_HOLIDAYS_API_KEY=your-api-key-if-using-external-service

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Admin User (for initial setup)
ADMIN_EMAIL=admin@lawoffice.gr
ADMIN_PASSWORD=change-this-strong-password
ADMIN_NAME=Διαχειριστής

# Business Settings
BUSINESS_NAME=Δικηγορικό Γραφείο
BUSINESS_ADDRESS=Οδός 123, Αθήνα
BUSINESS_PHONE=+302101234567
BUSINESS_EMAIL=info@lawoffice.gr
BUSINESS_TAX_ID=123456789

# Appointment Settings
APPOINTMENT_DURATION_MINUTES=30
APPOINTMENT_BUFFER_MINUTES=15
APPOINTMENT_PRICE_EUR=50

# Time Zone
TZ=Europe/Athens

# Security
ENABLE_2FA=true
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

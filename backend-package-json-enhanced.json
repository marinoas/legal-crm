{
  "name": "legal-crm-backend",
  "version": "2.0.0",
  "description": "Advanced Legal CRM Backend with AI Integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seed.js",
    "seed:clear": "node scripts/seed.js --clear",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js",
    "docs": "jsdoc -c jsdoc.json",
    "security:check": "npm audit && snyk test",
    "performance:test": "artillery run tests/performance.yml",
    "docker:build": "docker build -t legal-crm-backend .",
    "docker:run": "docker-compose up -d"
  },
  "keywords": [
    "legal",
    "crm",
    "law",
    "office",
    "management",
    "greek",
    "ai"
  ],
  "author": "Legal CRM Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@tensorflow/tfjs-node": "^4.17.0",
    "archiver": "^6.0.1",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "faker": "^5.5.3",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "isomorphic-dompurify": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun-js": "^0.22.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.44",
    "mongoose": "^8.0.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.10.0",
    "node-cron": "^3.0.3",
    "node-tesseract-ocr": "^2.2.1",
    "nodemailer": "^6.9.8",
    "openai": "^4.24.7",
    "pdf-parse": "^1.1.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "sharp": "^0.33.2",
    "slugify": "^1.6.6",
    "socket.io": "^4.6.0",
    "speakeasy": "^2.0.0",
    "stripe": "^14.12.0",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.20.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@types/node": "^20.11.5",
    "artillery": "^2.0.4",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.2",
    "snyk": "^1.1269.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "tests/*",
      "docs/*",
      "logs/*",
      "uploads/*",
      "backups/*"
    ],
    "delay": "2500"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/docs/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Portal-specific URLs (for production)
REACT_APP_ADMIN_URL=https://admin.legalcrm.gr
REACT_APP_SUPERVISOR_URL=https://supervisor.legalcrm.gr
REACT_APP_SECRETARY_URL=https://secretary.legalcrm.gr
REACT_APP_CLIENT_URL=https://client.legalcrm.gr

# Authentication
REACT_APP_JWT_REFRESH_INTERVAL=900000  # 15 minutes
REACT_APP_SESSION_TIMEOUT=3600000      # 1 hour

# Stripe Configuration
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx

# Viva Payments Configuration
REACT_APP_VIVA_MERCHANT_ID=xxxxxxxxxxxxx
REACT_APP_VIVA_API_KEY=xxxxxxxxxxxxx
REACT_APP_VIVA_CLIENT_ID=xxxxxxxxxxxxx
REACT_APP_VIVA_CLIENT_SECRET=xxxxxxxxxxxxx

# Google Services
REACT_APP_GOOGLE_MAPS_API_KEY=xxxxxxxxxxxxx
REACT_APP_GOOGLE_MEET_CLIENT_ID=xxxxxxxxxxxxx

# File Upload Limits
REACT_APP_MAX_FILE_SIZE=10485760       # 10MB in bytes
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png

# Localization
REACT_APP_DEFAULT_LOCALE=el
REACT_APP_FALLBACK_LOCALE=en

# Features Toggle
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_SENTRY=false
REACT_APP_ENABLE_PWA=true

# Security
REACT_APP_ENABLE_WATERMARK=true
REACT_APP_DISABLE_RIGHT_CLICK=true
REACT_APP_DISABLE_TEXT_SELECTION=true

# Development
REACT_APP_MOCK_API=false
REACT_APP_DEBUG_MODE=false

